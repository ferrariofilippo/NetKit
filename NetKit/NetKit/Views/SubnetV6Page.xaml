<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetKit.Views.SubnetV6Page"
             Title="IPv6 - Subnet Calculator"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#424242}">
	<ContentPage.Content>
        <StackLayout
			Padding="40, 20, 40, 40" 
            VerticalOptions="Start">
            <Entry
                MaxLength="39"
                Placeholder="Base Address: "
                x:Name="baseAddressEntry" />
            <Entry
				Placeholder="Global Routing Prefix Length (bits): "
                MaxLength="3"
                x:Name="globalPrefixEntry" />
            <Entry
				Placeholder="How many subnets: "
                MaxLength="6"
                x:Name="howManyEntry" />
            <Button
				Text="Submit"
                Clicked="SubmitClicked" />

            <Line />

            <ListView 
				SelectionMode="None"
				x:Name="subnetListView">
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>