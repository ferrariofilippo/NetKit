<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetKit.Views.VLSMPage"
             Title="IPv4 - VLSM"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#424242}">
    <ContentPage.Content>
        <ScrollView Padding="40, 20, 40, 40" VerticalOptions="Start">
            <StackLayout  Spacing="30">
                <StackLayout VerticalOptions="Start">
                    <ListView x:Name="hostsListView" 
                          RowHeight="40"
                          SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Entry Placeholder="Enter host number:"
                                       Text="{Binding Data}"
                                       MaxLength="9"/>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ImageButton Clicked="Add_Clicked" 
                                 Source="{AppThemeBinding Light=Add.png, Dark=WhiteAdd.png}"
                                 BackgroundColor="Transparent"
                                 HorizontalOptions="Center"
                                 Grid.Column="0"
                                 HeightRequest="30"/>
                        <ImageButton Clicked="Delete_Clicked"
                                 Source="{AppThemeBinding Light=Delete.png, Dark=WhiteDelete.png}"
                                 BackgroundColor="Transparent"
                                 HorizontalOptions="Center"
                                 Grid.Column="1"
                                 HeightRequest="30"/>
                    </Grid>
                </StackLayout>


                <Button Clicked="GetResults_Clicked"
                        Text="Submit"
                        CornerRadius="25"
                        FontAttributes="Bold"
                        FontSize="Subtitle"
                        x:Name="vlsmButton"/>

                <Line/>

                <ListView x:Name="outputListView"
                          SelectionMode="None"
                          RowHeight="140"
                          SeparatorColor="#a39a38">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="0, 25, 0, 15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Label FontAttributes="Bold"
                                           Text="Network: "
                                           Grid.Row="0"
                                           Grid.Column="0"/>
                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding NetworkAddress}"
                                           HorizontalOptions="CenterAndExpand"/>

                                    <Label FontAttributes="Bold"
                                           Text="Broadcast: "
                                           Grid.Row="1"
                                           Grid.Column="0"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding BroadcastAddress}"
                                           HorizontalOptions="CenterAndExpand"/>

                                    <Label FontAttributes="Bold"
                                           Text="Subnet Mask: "
                                           Grid.Row="2"
                                           Grid.Column="0"/>
                                    <Label Grid.Row="2"
                                           Grid.Column="1"
                                           Text="{Binding SubnetMask}"
                                           HorizontalOptions="CenterAndExpand"/>

                                    <Label FontAttributes="Bold"
                                           Text="Numero Host: "
                                           Grid.Row="3"
                                           Grid.Column="0"/>
                                    <Label Grid.Row="3"
                                           Grid.Column="1"
                                           Text="{Binding HostNumber}"
                                           HorizontalOptions="CenterAndExpand"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>