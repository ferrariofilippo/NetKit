<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetKit.Views.CompressPage"
             Title="IPv6 - Compress"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#424242}">
	<ContentPage.Content>
		<StackLayout
            Padding="40, 20, 40, 20"
            Spacing="20">
			<Entry
                x:Name="ipEntry"
                Placeholder="Enter IP: " />
			<Button
                Clicked="CompressClicked"
                Text="Compress"
                x:Name="compressButton" />
			<Label
                FontSize="Large"
                HorizontalOptions="Center"
                Padding="0, 20, 0, 0"
                x:Name="outputLabel" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>