<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetKit.Views.CompressPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#424242}"
			 BindingContext="NetKit.ViewModels.CompressViewModel"
             Title="IPv6 - Compress">

	<ContentPage.Content>
		<StackLayout
            Padding="40, 20, 40, 20"
            Spacing="20">
			<Entry
                Placeholder="Enter IP: "
                Text="{Binding IpAddress}" />
			
			<Button
                Clicked="CompressClicked"
                Text="Compress"
                x:Name="compressButton" />
			
			<Label
                FontSize="Large"
                HorizontalOptions="Center"
                Padding="0, 20, 0, 0"
                Text="{Binding OutputAddress}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
	